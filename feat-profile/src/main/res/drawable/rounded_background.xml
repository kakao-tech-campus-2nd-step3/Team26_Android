<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 설정 -->
    <solid android:color="@android:color/white" />

    <!-- 모서리 둥글게 설정 -->
    <corners android:radius="16dp" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <!-- 패딩 설정 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
