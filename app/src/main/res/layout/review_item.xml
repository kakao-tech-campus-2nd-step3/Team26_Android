<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rating"
            type="String" />
        <variable
            name="reviewText"
            type="String" />
        <variable
            name="imageUrl"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="338dp"
        android:layout_height="109dp"
        android:background="@drawable/review_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/eventImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rating"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:scaleType="centerCrop"
                app:imageUrl="@{imageUrl}"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/star"
            app:layout_constraintTop_toTopOf="@id/eventImage"
            app:layout_constraintStart_toEndOf="@id/eventImage"
            android:layout_marginStart="5dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/star_fill"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/star"
            app:layout_constraintTop_toTopOf="@id/star"
            app:layout_constraintBottom_toBottomOf="@id/star"
            android:textSize="11sp"
            android:text="@{rating}"/>

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@id/star"
            app:layout_constraintStart_toStartOf="@id/star"
            android:maxWidth="200dp"
            android:maxLines="4"
            android:textSize="12sp"
            android:text="@{reviewText}"
            tools:text="text\ntext\ntext\ntext" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
