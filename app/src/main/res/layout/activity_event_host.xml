<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="eventhost"
            type="org.ktc2.cokaen.wouldyouin.EventHostActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Horizontal ScrollView for posters -->
        <HorizontalScrollView
            android:id="@+id/posterScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Example poster images -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/poster"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/poster"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/poster"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Event Information (Date, Time, Location, Duration, Fee) -->
        <LinearLayout
            android:id="@+id/eventInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/posterScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="4dp">

            <!-- Event Date and Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024.02.15, PM 7:00"
                android:textSize="13sp"
                android:textColor="#000000" />

            <!-- Event Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광주 문화전당로 보헤미안 소극장"
                android:textSize="13sp"
                android:textColor="#000000" />

            <!-- Event Duration and Price -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩4,000"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약 60분"
                    android:textSize="13sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Reservation Status Text -->
        <TextView
            android:id="@+id/reservationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예매 현황 \n 12/35"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/eventInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp" />

        <!-- Scrollable reservation status section -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/reservationScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/reservationStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#EEEEEE"
                android:padding="16dp">

                <!-- Example reservations -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예매 2024.02.14 09:30 김*희 1234 2인 T12321"
                    android:textColor="#0000FF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소 2024.02.14 09:22 라*연 4123 1인 T11212"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예매 2024.02.13 02:12 춘*이 5678 3인 T17721"
                    android:textColor="#0000FF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예매 2024.02.12 07:20 무*지 1111 2인 T18812"
                    android:textColor="#0000FF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예매 2024.02.11 09:30 프*도 4321 1인 T19812"
                    android:textColor="#0000FF"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Event Description -->
        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="행사 설명"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/reservationScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/eventDescriptionDetail"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/eventDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전남대학교 공과대학 밴드 동아리 '새벽울림'이 14번째 정기 공연으로 찾아옵니다."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/eventDescription"
            android:layout_marginTop="25dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>